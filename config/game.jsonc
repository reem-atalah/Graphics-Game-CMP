{
    "start-scene": "main",
    "window":
    {
        "title":"Default Game Window",
        "size":{
            "width":1280,
            "height":720
        },
        "fullscreen": false
    },
    "scene": {
        "renderer":{
            "sky": "assets/textures/sky.jpg",
            "postprocess": "assets/shaders/postprocess/vignette.frag"
        },
        "assets":{
            "shaders":{
                "tinted":{
                    "vs":"assets/shaders/tinted.vert",
                    "fs":"assets/shaders/tinted.frag"
                },
                "textured":{
                    "vs":"assets/shaders/textured.vert",
                    "fs":"assets/shaders/textured.frag"
                },
                "lighted":{
                    "vs":"assets/shaders/lighted.vert",
                    "fs":"assets/shaders/lighted.frag"
                }
            },
            "textures":{
                "maze": "assets/textures/maze.png",
                "ball": "assets/textures/ball.jpg",
                "albedo": "assets/textures/maze.png",
                "specular": "assets/textures/maze.png",
                "ambient_occlusion": "assets/textures/maze.png",
                "emissive":"assets/textures/maze.png",
                "roughness":"assets/textures/maze.png"
            },
            "meshes":{
                "maze": "assets/models/maze.obj",
                "sphere": "assets/models/sphere.obj",
                "ball": "assets/models/ball.obj"

            },
            "samplers":{
                "default":{},
                "pixelated":{
                    "MAG_FILTER": "GL_NEAREST"
                }
            },
            "materials":{
                "ball":{
                    "type": "textured",
                    "shader": "textured",
                    "pipelineState": {
                        "faceCulling":{
                            "enabled": false
                        },
                        "depthTesting":{
                            "enabled": true
                        }
                    },
                    "tint": [1, 1, 1, 1],
                    "texture": "ball",
                    "sampler": "pixelated"
                },
                "maze":{
                    "type": "lighted",
                    "shader": "lighted",
                    "pipelineState": {
                        "faceCulling":{
                            "enabled": false
                        },
                        "depthTesting":{
                            "enabled": true
                        }
                    },
                    "sampler": "default",
                    "albedo" :"albedo",
                    "roughness":"roughness",
                    "specular":"specular",
                    "emissive":"emissive",
                    "ambient_occlusion":"ambient_occlusion"
                }
            }
        },
        "world":[
            {
                "position": [-40, 60, 0],
                "rotation": [0, -120, 0],
                "components": [
                    {
                        "type": "Camera",
                        "fov": 90,
                        "near": 0.01,
                        "far": 1000
                    },
                    {
                        "type": "Free Camera Controller"
                    }
                ],
                "children": [
                    {
                        "position": [0, 0, -20],
                        "scale": [0.1, 0.1, 0.1],
                        "components": [
                            {
                                "type": "Mesh Renderer",
                                "mesh": "ball",
                                "material": "ball",
                                "isBall":true
                            }
                        ]
                    }
                ]
            },
            {
                "position": [0, 0, 0],
                "scale": [1, 1, 1],
                "components": [
                    {
                        "type": "Mesh Renderer",
                        "mesh": "maze",
                        "material": "maze",
                        "isMaze":true
                    }
                ]
            },
            {
                "position": [0, 0, 0],  //directional light has no position
                "components": [
                    {
                        "type": "Light",
                        "lightType": "directional"
                        // "cone_angles":[10,100]

                    } 
                 ] 
            }
        ]
    }
}